<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_main_top"
    android:background="#8888fffe"
    tools:context=".MainFragment">

    <com.tks.rapidfirecamera.AutoFitTextureView
        android:id="@+id/tvw_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RelativeOverlap" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_config"
        android:layout_width="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ImageButton
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:id="@+id/btn_settingaaa"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_setting"
            android:src="@drawable/img_setting"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/str_todo" />

        <ImageButton
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:id="@+id/btn_setting"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_setting"
            android:contentDescription="@string/str_todo" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageButton
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:id="@+id/btn_shutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/img_shutter"
        android:contentDescription="@string/str_todo" />

</RelativeLayout>